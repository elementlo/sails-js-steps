<form action="/activity/create" method="POST">
  <div class="col-12 col-xl-6 col-lg-6 col-sm-12">
    <div class="form-group">
      <label>Name:</label>
      <input type="text" class="form-control" name="Activity[name]" required>
    </div>
    <div class="form-group">
      <span>Short Description:</span><br>
      <textarea name="Activity[short_description]" cols="100" rows="12" required></textarea>
    </div>
    <div class="form-group">
      <span>Full Description:</span><br>
      <textarea name="Activity[full_description]" cols="100" rows="12"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label>Image URL:</label>
    <input type="text" class="form-control" name="Activity[img_url]" required>
  </div>
  <div>
    <span>Organizer:</span>
    <select name="Activity[organizer]" onchange="teamSelected(this.value)">
      <option value="nan">Please pick one:</option>
      <option value="student">student</option>
      <option value="professor">professor</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
